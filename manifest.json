{
  "manifest_version": 3,
  "name": "Popup Text Editor",
  "version": "1.0",
  "description": "Handy Popup Text Editor for Chrome",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "permissions": [
    "clipboardWrite",
    "storage"
  ],
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}